# RAGHeat Trading System Environment Variables

# OpenAI API Key (for LLM analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=postgresql://ragheat:ragheat_pass@postgres:5432/ragheat_db
REDIS_URL=redis://redis:6379

# Neo4j Graph Database
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=ragheat_neo4j

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:29092

# API Configuration
BACKEND_API_URL=http://ragheat-backend:8001
REACT_APP_BACKEND_URL=http://localhost:8001
REACT_APP_WS_URL=ws://localhost:8001

# Security
JWT_SECRET=your_jwt_secret_here
API_RATE_LIMIT=1000

# External APIs (Optional)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
FINNHUB_API_KEY=your_finnhub_key
YAHOO_FINANCE_API_KEY=your_yahoo_finance_key

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=ragheat_admin

# Development/Production
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Heat Engine Configuration
HEAT_DIFFUSION_ALPHA=0.1
HEAT_THRESHOLD=0.3
GRID_SIZE=50

# GraphRAG Configuration
MAX_REASONING_PATHS=10
GRAPH_UPDATE_INTERVAL=300

# Market Hours
MARKET_TIMEZONE=America/New_York
TRADING_SESSION_START=09:30
TRADING_SESSION_END=16:00